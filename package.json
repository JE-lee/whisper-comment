{
  "name": "whisper-comment-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for whisper-comment project with client and server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:client": "pnpm --filter @whisper-comment/client dev",
    "dev:server": "pnpm --filter @whisper-comment/server dev",
    "build": "pnpm run --recursive build",
    "build:client": "pnpm --filter @whisper-comment/client build",
    "install:all": "pnpm install",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "check": "pnpm run lint && pnpm run build"
  },
  "keywords": [
    "monorepo",
    "comment",
    "preact",
    "fastify",
    "fullstack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0"
  },
  "volta": {
    "node": "22.16.0",
    "pnpm": "10.13.1"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.38"
  }
}
