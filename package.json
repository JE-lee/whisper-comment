{
  "name": "whisper-comment-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for whisper-comment project with client and server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:client": "pnpm --filter @whisper-comment/client dev",
    "dev:server": "pnpm --filter @whisper-comment/server dev",
    "build": "pnpm run --recursive build",
    "build:client": "pnpm --filter @whisper-comment/client build",
    "install:all": "pnpm install"
  },
  "keywords": [
    "monorepo",
    "comment",
    "preact",
    "fastify",
    "fullstack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {},
  "volta": {
    "node": "22.16.0",
    "pnpm": "10.13.1"
  }
}
